<%- include ('../partials/header'); -%>

<div class="container-add">
    <div class="row">

        <div class="offset-md-3 col-md-3">
            <h1><%= title %></h1>
            <hr>
            <br>

            <% for(var i in messages) { %>
                <div class="flash"><%= messages[i] %></div>
            <% } %>
            <form action="/users/register" method="post" validate>

                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" name="username" value="<%= user.username %>" class="form-control" placeholder="Username"/>
                </div>

                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" name="email" value="<%= user.email %>" class="form-control" placeholder="Email"/>
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="password" value="<%= user.password %>" class="form-control" placeholder="Password"/>
                </div>

                <div class="form-group">
                    <label>Confirm Password:</label>
                    <input type="password" name="password_confirm" class="form-control" placeholder="Re-enter Password"/>
                </div>

                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" name="firstName" value="<%= user.firstName %>" class="form-control" placeholder="First Name"/>
                </div>

                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" value="<%= user.lastName %>" class="form-control" placeholder="Last Name"/>
                </div>

                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" name="street" value="<%= user.street %>" class="form-control" placeholder="Address"/>
                </div>

                <div class="form-group">
                    <label>City:</label>
                    <input type="text" name="city" value="<%= user.city %>" class="form-control" placeholder="City"/>
                </div>

                <div class="form-group">
                    <label>Province:</label>
                    <select name="province">
                        <option value="" disabled selected>--select--</option>
                        <option <%- user.province == 0 ? "selected" : "" %> value="0">AB</option>
                        <option <%- user.province == 1 ? "selected" : "BC" %> value="1">BC</option>
                        <option <%- user.province == 2 ? "selected" : "MB" %> value="2">MB</option>
                        <option <%- user.province == 3 ? "selected" : "NB" %> value="3">NB</option>
                        <option <%- user.province == 4 ? "selected" : "NL" %> value="4">NL</option>
                        <option <%- user.province == 5 ? "selected" : "NT" %> value="5">NT</option>
                        <option <%- user.province == 6 ? "selected" : "NS" %> value="6">NS</option>
                        <option <%- user.province == 7 ? "selected" : "NU" %> value="7">NU</option>
                        <option <%- user.province == 8 ? "selected" : "ON" %> value="8">ON</option>
                        <option <%- user.province == 9 ? "selected" : "PE" %> value="9">PE</option>
                        <option <%- user.province == 10 ? "selected" : "QC" %> value="10">QC</option>
                        <option <%- user.province == 11 ? "selected" : "SK" %> value="11">SK</option>
                        <option <%- user.province == 12 ? "selected" : "YT" %> value="12">YT</option>
                      </select>

                </div>

                <div class="form-group">
                    <label>Postal Code:</label>
                    <input type="text" name="postal" value="<%= user.postal %>" class="form-control" placeholder="Postal Code"/>
                </div>
                <br>
                <div class="form-group">
                    <input type="checkbox" name="newsletter" value="<%= user.newsletter %>" class="form-control" checked/>
                    <label> Sign-up for Exclusive weekly deals and to stay in the loop!</label>
                </div>
                <br>

                <br>
                
                <div>
                    <input class="btn btn-primary" type="submit" value="Create account" />
                </div>

            </form>
        </div>
    </div>
</div>

<%- include ('../partials/footer'); -%>