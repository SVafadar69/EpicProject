<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">

        <div class="offset-md-3 col-md-3">
            <h1><%= title %></h1>

            <% for(var i in messages) { %>
                <div class="flash"><%= messages[i] %></div>
            <% } %>
            <form action="/users/register" method="post" validate>

                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" name="username" value="<%= user.username %>" class="form-control" placeholder="Username"/>
                </div>

                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" name="email" value="<%= user.email %>" class="form-control" placeholder="Email"/>
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" name="password" value="<%= user.password %>" class="form-control" placeholder="Password"/>
                </div>

                <div class="form-group">
                    <label>Confirm Password:</label>
                    <input type="password" name="password_confirm" class="form-control" placeholder="Re-enter Password"/>
                </div>

                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" name="firstName" value="<%= user.firstName %>" class="form-control" placeholder="First Name"/>
                </div>

                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" value="<%= user.lastName %>" class="form-control" placeholder="Last Name"/>
                </div>

                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" name="street" value="<%= user.address.street %>" class="form-control" placeholder="Address"/>
                </div>

                <div class="form-group">
                    <label>City:</label>
                    <input type="text" name="city" value="<%= user.address.city %>" class="form-control" placeholder="City"/>
                </div>

                <div class="form-group">
                    <label>Province:</label>
                    <select name="user.address.province">
                        <% var options = [ "AB", "BC", "MB", "NB", "NL", "NT", "NS", "NU", "ON", "PE", "QC", "SK", "YT" ]; %>
                        <% for(var i = 0; options.length; i++) { %>
                          <option value='<%= i %>'><%= i %></option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Postal Code:</label>
                    <input type="text" name="postal" value="<%= user.address.postal %>" class="form-control" placeholder="Postal Code"/>
                </div>

                <div class="form-group">
                    <label>Sign-up for Exclusive weekly deals and to stay in the loop!</label>
                    <input type="checkbox" name="newsletter" value="<%= user.newsletter %>" class="form-control"/>
                </div>


                <br>
                
                <div>
                    <input class="btn btn-primary" type="submit" value="Create account" />
                </div>

            </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>